<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#EC407A" /> <!-- Soft Pink Button Color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D81B60" /> <!-- Darker shade for pressed state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Light Grey color for disabled state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>